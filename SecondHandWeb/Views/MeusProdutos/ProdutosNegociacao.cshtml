@model IEnumerable<Entities.Models.Produto>

@{
    ViewData["Title"] = "ProdutosNegociacao";
}

<h1>Meus Produtos em Negociação</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.Cidade)
        </th>*@
            @*<th>
            @Html.DisplayNameFor(model => model.Usuario)
        </th>*@
            <th>
                @Html.DisplayNameFor(model => model.DataVenda)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Nome)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.Cidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.Email)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.DataVenda)
            </td>
            <td>
                @* <a asp-action="Edit" asp-route-id="@item.ProdutoId">Editar</a> *@
                <div class="text-center">
                    <div class="btn-group ">
                        <a class="btn btn-success" asp-controller="MeusProdutos" asp-action="Vender">Confirmar Venda</a>

                    </div>
                </div>

            </td>
        </tr>
}
    </tbody>
</table>
