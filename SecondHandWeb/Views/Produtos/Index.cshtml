@model SecondHandWeb.Models.ProdutoCategoriaVM

@{ ViewData["Title"] = "Index"; }

<h1>Produtos<br /></h1>

<form asp-controller="Produtos" asp-action="Index" method="get">
    <div>
        <p>
            Preço Mínimo <input type="number" asp-for="PrecoMin" />

            &nbsp;&nbsp;Preço Máximo <input type="number" asp-for="PrecoMax" />

            <input type="submit" value="Filter" />
        </p>
    </div>
</form>

<form asp-controller="Produtos" asp-action="Index" method="get">
    <p>
        <select asp-for="Categoria" asp-items="Model.Categorias">
            <option value="">All</option>
        </select>

        Produto: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produtos[0].Categoria.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produtos[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produtos[0].Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produtos[0].Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produtos[0].Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produtos[0].NomeVendedor)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Produtos)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Categoria.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Descricao)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Preco)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Cidade)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NomeVendedor)
    </td>

    <td>
        @*<a asp-action="Comprar" asp-route-id="@item.ProdutoId">Comprar</a>*@
        <a class="btn btn-success" asp-controller="Produtos" asp-route-id="@item.ProdutoId" asp-action="Comprar">Comprar</a>
        <a class="btn btn-success" asp-controller="Produtos" asp-route-id="@item.ProdutoId" asp-action="Details">Detalhes</a>

    </td>
</tr>
}

    </tbody>
</table>
