@model Entities.Models.Produto


<div class="col-md-4 col-sm-4 col-lg-4">
    
    <div class="figure-caption">
        <h4 class="formPullRightButton">@Model.Preco.ToString("c")</h4>
        <h4>
            <a asp-controller="Produto" asp-action="Details1" asp-route-lancheId="@Model.ProdutoId">@Model.Nome</a>
        </h4>
        <h6>@Model.Descricao</h6>
    </div>
    <div text-right">
        <p class="formPullRightButton">
            <a class="btn btn-primary" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-produtoId="@Model.ProdutoId">
                Incluir no Carrinho
            </a>
        </p>
    </div>
</div>