@model IEnumerable<Entities.Models.Pedido>
  

        @{ ViewData["Title"] = "Vendas Por Período"; }

        <h2>@ViewData["Title"]</h2>

        <nav class="navbar navbar-dark">
            <div class="container-fluid">
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="minDate">Data Inicial</label>
                            <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                        </div>
                        <div class="form-group">
                            <label for="maxDate">Data Final</label>
                            <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Pesquisar</button>
                </form>
            </div>
        </nav>
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="panel-title">Total de Pedidos = @Model.Count()</h4>
                <h4 class="panel-title">Total de Produtos Comprados = @Model.Sum(obj => obj.TotalItensPedido).ToString()</h4>
                <h4 class="panel-title">Valor Total dos Pedidos = @Model.Sum(obj => obj.PedidoTotal).ToString("c")</h4>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr class="success">
                            <th>
                                @Html.DisplayNameFor(model => model.PedidoId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Telefone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PedidoTotal)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TotalItensPedido)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PedidoCompra)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PedidoId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PedidoTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalItensPedido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PedidoCompra)
                </td>
            </tr>}
                    </tbody>
                </table>
            </div>
        </div>
